/* pages/collection/ollection.wxss */
.img_view{
  overflow: hidden;
  margin-top: 38rpx;
  padding: 0 20rpx;
}
.img_list{
  width: 342rpx;
  height: 400rpx;
  background-image:url(http://image2.artup.com/static/xiaochengxu/collection_bg.png);
  background-size: 100% 100%;
  float:left;
  margin-bottom: 46rpx;
}
.img_list .img_box{
  width: 280rpx;
  height: 280rpx;
  margin-top: 30rpx;
  margin-left: 28rpx;
  position: relative;
  overflow: hidden;
}
.img_list .img_box image{
  position: absolute;
  margin: auto auto;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  max-height: 100%;
  max-width: 100%;
}
.img_list text{
  color: #333;
  font-size: 29rpx;
  display: block;
  margin: 0 auto 0;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  height: 80rpx;
  overflow: hidden;
}
 .img_list:nth-child(2n+2){
  float: right;
} 